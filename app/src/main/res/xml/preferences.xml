<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <PreferenceCategory
        android:title="@string/main">

        <SwitchPreference
            android:key="notifications_preference"
            android:title="@string/notification"
            android:summary="@string/notifications_preference" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/help_me">

        <PreferenceScreen
            android:key="legal"
            android:title="@string/legal">
            <intent android:action="android.intent.action.VIEW"
                android:data="http://www.android.com" />

        </PreferenceScreen>

        <PreferenceScreen
            android:key="website"
            android:title="@string/website">
            <intent android:action="android.intent.action.VIEW"
                android:data="http://www.android.com" />

        </PreferenceScreen>

        <PreferenceScreen
            android:key="contact_us"
            android:title="@string/contact_us">
            <intent android:action="android.intent.action.VIEW"
                android:data="mailto:redaction@mgig.fr" />

        </PreferenceScreen>

    </PreferenceCategory>

</PreferenceScreen>